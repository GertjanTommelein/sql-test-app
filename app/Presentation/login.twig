{% extends "base.twig" %}
{% block title %}Login{% endblock %}
{% block content %}
    <main class="p-4 d-flex align-items-center justify-content-center">
        
        <div class="login-container">
            <div class="form-header d-flex justify-content-center align-items-center">
                <h4 class="font-weight-bold">Login</h4>
            </div>
            <form action="login.php" method="POST" class="d-flex flex-column login-form p-3">
                {% if error %}
                <div class="alert alert-danger">
                    <i class="fa-solid fa-circle-exclamation"></i> {{ error }}
                </div>
                {% endif %}
                <div class="form-group">
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                    <input class="form-control" type="email" placeholder="E-mail" name="loginEmail" id="email">
                </div>
                </div>
                <div class="form-group">
                <div class="input-group">
                    <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                    <input class="form-control" type="password" placeholder="Wachtwoord" name="loginPassword" id="password">
                </div>
                </div>
                <button type="submit" name="loginSubmit" class="btn btn-primary w-100">Login</button>
            </form>
        </div>
    </main>
{% endblock %}
